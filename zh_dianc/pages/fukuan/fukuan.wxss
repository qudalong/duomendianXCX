page {
    background-color: #EFEFF4;
}

.fukuan_img {
    width: 100rpx;
    height: 100rpx;
    background-color: pink;
    border-radius: 50%;
}

.fukuan_header {
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 250rpx;
    justify-content: center;
}

.fukuan_seller {
    font-size: 32rpx;
    color: #333;
    margin-top: 30rpx;
}

.fukuan_pay {
    background-color: white;
    padding: 20rpx;
    margin: 20rpx;
    border-radius: 10rpx;
}

.fukuan_money {
    height: 130rpx;
    background-color: #F7F5F6;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
}

.fukuan_input {
    height: 80rpx;
    font-size: 40rpx;
    width: 350rpx;
    padding-left: 50rpx;
    color: #FE5761;
}

.money_text {
    font-size: 26rpx;
    color: #666;
    margin-left: 30rpx;
}

.fukuan_add {
    border: 1rpx solid #999;
    border-radius: 50%;
    width: 50rpx;
    height: 50rpx;
    text-align: center;
    color: #666;
    line-height: 40rpx;
    margin-left: 40rpx;
}

.fukuan_flex {
    display: flex;
    align-items: center;
    height: 80rpx;
    margin-top: 20rpx;
}

.youhui {
    font-size: 26rpx;
    color: #999;
    margin-left: 20rpx;
}

.footer {
    height: 130rpx;
    display: flex;
    width: 100%;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
}

.footer_left {
    background-color: white;
    width: 65%;
    height: 130rpx;
    color: #34AAFF;
    line-height: 130rpx;
    text-indent: 1em;
    font-size: 40rpx;
}

.footer_right {
    background-color: #34AAFF;
    height: 130rpx;
    width: 35%;
    text-align: center;
    line-height: 130rpx;
    border-radius: 0rpx;
    color: white;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 80vw;
    overflow: hidden;
    position: fixed;
    top: 30%;
    left: 0;
    z-index: 1001;
    background: #FFF;
    margin: 0 10vw 0 10vw;
    border-radius: 20rpx;
}

.zfimg {
    width: 50rpx;
    height: 45rpx;
    margin-right: 20rpx;
}

.zfimg image {
    width: 100%;
    height: 100%;
}

.yetext {
    color: #34AAFF;
    font-size: 26rpx;
    margin-left: 20rpx;
}

.zftext {
    font-size: 40rpx;
    margin-left: 20rpx;
}

.zfztext {
    font-size: 40rpx;
}

.radio-group .weui-cell {
    padding: 30rpx 30rpx;
    font-size: 30rpx;
}

.drawer_title {
    padding: 30rpx;
    font: 30rpx "microsoft yahei";
    font-weight: bold;
    text-align: center;
    color: #333;
    background: #F2F2F2;
}

.drawer_title1 {
    border-top: 0.5px solid #e6e6e6;
    padding: 20rpx;
    font: 27rpx "microsoft yahei";
    text-align: center;
    color: #999;
}

.drawer_content {
    height: 210px;
    overflow-y: scroll;
}

.btn_ok1 {
    padding: 25rpx;
    font: 30rpx "microsoft yahei";
    text-align: center;
    background: linear-gradient(to bottom right,#00CD66,#1aad19);
    color: #fff;
    border-radius: 0;
}

.btn_ok2 {
    padding: 25rpx;
    font: 30rpx "microsoft yahei";
    text-align: center;
    background: linear-gradient(to bottom right,#87CEFA,#34AAFF);
    color: #fff;
    border-radius: 0;
}

button[disabled][type="default"],button[disabled]:not([type]) {
    color: #fff;
    opacity: 0.8;
}