.distribution {
    width: 100%;
    overflow-x: hidden;
}

.header {
    width: 100%;
    height: 220rpx;
}

.header>image {
    width: 100%;
    height: 100%;
}

.banner {
    margin-top: 10rpx;
    background-color: white;
    padding: 0rpx 20rpx;
    font-size: 28rpx;
}

.huanying {
    font-size: 30rpx;
    padding: 25rpx 0rpx;
    border-bottom: 2rpx solid #eee;
}

.huanying>text {
    color: #34aaff;
}

.bannerbox {
    display: flex;
    align-items: center;
    height: 80rpx;
    border-bottom: 2rpx solid #eee;
    padding: 0rpx 5rpx;
}

.bannerbox>view {
    width: 170rpx;
    color: #666;
}

.bannerbox>input {
    border: none;
    outline: none;
}

.disbox {
    background: #eee;
    padding: 20rpx 30rpx;
}

.disbox>button {
    border: none;
    outline: none;
    background-color: #34aaff;
    color: white;
    font-size: 30rpx;
    line-height: 90rpx;
}

.section {
    border-bottom: 2rpx solid #eee;
    padding: 15rpx 5rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.secimg {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    margin-right: 30rpx;
    background-color: #34aaff;
}

.read {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    color: #999;
}

.readfont {
    color: #ff6161;
}

.kcrzxy {
    width: 70%;
    left: 50%;
    top: 15%;
    position: fixed;
    transform: translate(-50%,0);
    background: #fff;
    border-radius: 10px;
    z-index: 999;
}

.kcrzxyhd {
    text-align: center;
    font-size: 30rpx;
    background: #34aaff;
    height: 70rpx;
    line-height: 70rpx;
    color: white;
    border-top-left-radius: 10px;
    border-top-right-radius: 10px;
}

.kcrzxybd {
    font-size: 28rpx;
    padding: 20rpx 30rpx;
    box-sizing: border-box;
}

.queren {
    position: relative;
    height: 70rpx;
    width: 30%;
    left: 35%;
    font-size: 30rpx;
    line-height: 70rpx;
    text-align: center;
    color: white;
    background: #34aaff;
    border-radius: 10rpx;
    margin: 5px 0;
}

button:active {
    color: rgba(255,255,255,0.6);
    opacity: 0.6;
}

.zhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.6);
    z-index: 998;
}

button[disabled][type="default"],button[disabled]:not([type]) {
    color: #fff;
}