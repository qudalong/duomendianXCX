page {
    background-color: #EFEFF4;
}

.re_header {
    width: 100%;
    height: 150rpx;
    background-color: #34AAFF;
    display: flex;
    align-items: center;
    justify-content: center;
}

.re_header_image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
}

.re_header_img {
    width: 80rpx;
    height: 80rpx;
    background-color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.re_header_order {
    margin-left: 30rpx;
    font-size: 32rpx;
    color: white;
}

.re_content {
    margin: 10rpx 0rpx;
    background-color: white;
    padding: 0rpx 30rpx;
}

.content_title {
    font-size: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    border-bottom: 1rpx solid #E7E7E8;
}

.content_img {
    width: 20rpx;
    height: 30rpx;
}

.content_info {
    font-size: 28rpx;
    color: #999;
    line-height: 50rpx;
    padding: 20rpx 0rpx;
}

.re_info {
    padding: 0rpx 30rpx;
    background-color: white;
}

.info_title {
    font-size: 32rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    border-bottom: 1rpx solid #E7E7E8;
}

.info_order {
    padding: 30rpx 50rpx;
}

.info_menu {
    font-size: 28rpx;
}

.info_success {
    font-size: 26rpx;
    color: #999;
    margin-top: 10rpx;
}

.info_box {
    border-left: 1rpx solid #E7E7E8;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-left: 30rpx;
    position: relative;
}

.info_yuan {
    width: 15rpx;
    height: 15rpx;
    background-color: #E7E7E8;
    border-radius: 50%;
    position: absolute;
    left: -8rpx;
    top: 40%;
}

.footer_top {
    display: flex;
    font-size: 28rpx;
    background-color: white;
    height: 100rpx;
    padding-top: 20rpx;
}

.footer {
    background-color: white;
    display: flex;
    justify-content: center;
    width: 100%;
    height: 200rpx;
    padding-top: 10rpx;
}

.info_cancel {
    width: 350rpx;
    color: #34AAFF;
    border: 1rpx solid #34AAFF;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 6rpx;
    margin: 0rpx 30rpx;
}

.info_tel {
    width: 350rpx;
    color: white;
    background-color: #34AAFF;
    text-align: center;
    height: 60rpx;
    line-height: 60rpx;
    border-radius: 6rpx;
    margin: 0rpx 30rpx;
}

.footer_confirm {
    font-size: 30rpx;
    color: #34AAFF;
    border: 2rpx solid #34AAFF;
    border-radius: 6rpx;
    width: 460rpx;
    background-color: white;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
}

.info_back {
    background-color: #E7E7E8;
}

.default {
    background-color: #FF9527;
}