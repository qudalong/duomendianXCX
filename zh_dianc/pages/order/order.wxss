page {
    background-color: #EFEFF4;
    margin-bottom: 150rpx;
}

.order_pay {
    padding: 30rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-bottom: 1rpx solid #E7E7E8;
}

.order_payimg {
    width: 100rpx;
    height: 100rpx;
    background-color: green;
    border-radius: 50%;
}

.order_paywaite {
    margin-top: 20rpx;
}

.order_paywaite view:nth-child(1) {
    font-size: 40rpx;
    color: #333;
}

.order_paywaite view:nth-child(2) {
    font-size: 26rpx;
    color: #9A9A9A;
    margin-top: 20rpx;
}

.order_paywaite view:nth-child(3) {
    font-size: 26rpx;
    color: #0097FF;
    margin-top: 20rpx;
    border: 1rpx solid #0097FF;
    border-radius: 4rpx;
    width: 130rpx;
    text-align: center;
    line-height: 40rpx;
    height: 40rpx;
}

.order_info {
    background-color: white;
    margin-top: 10rpx;
    padding-left: 30rpx;
    border-top: 1rpx solid #E7E7E8;
    border-bottom: 1rpx solid #E7E7E8;
    color: #444;
    font-size: 28rpx;
}

.order_lei {
    padding: 20rpx 30rpx 20rpx 0;
    border-bottom: 1rpx solid #E7E7E8;
}

.order_num {
    margin-right: 50rpx;
}

.order_money {
    color: #FF7070;
}

.order_shifu {
    text-align: right;
    font-weight: bold;
    font-size: 35rpx;
}

.order_confirm {
    width: 100%;
    height: 98rpx;
    display: flex;
    line-height: 98rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0rpx;
}

.order_already {
    width: 60%;
    height: 98rpx;
    background-color: white;
    text-align: center;
}

.order_integral {
    width: 40%;
    height: 98rpx;
    border-radius: 0rpx;
    background-color: #0396FF;
    text-align: center;
}

button::after {
    border-radius: 0;
}

.already_money {
    color: #333;
    font-size: 30rpx;
}

.already_text {
    color: #9A9A9A;
    font-size: 24rpx;
}

.order_integral {
    color: white;
    font-size: 36rpx;
    border-radius: 0;
}

.drawer_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1000;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
}

.drawer_box {
    width: 80vw;
    overflow: hidden;
    position: fixed;
    top: 20%;
    left: 0;
    z-index: 1001;
    background: #FFF;
    margin: 0 10vw 0 10vw;
    border-radius: 20rpx;
}

.zfimg {
    width: 50rpx;
    height: 45rpx;
    margin-right: 20rpx;
}

.zfimg image {
    width: 100%;
    height: 100%;
}

.yetext {
    color: #34AAFF;
    font-size: 26rpx;
    margin-left: 20rpx;
}

.zftext {
    font-size: 40rpx;
    margin-left: 20rpx;
}

.zfztext {
    font-size: 40rpx;
}

.radio-group .weui-cell {
    padding: 30rpx 30rpx;
    font-size: 30rpx;
}

.drawer_title {
    padding: 30rpx;
    font: 30rpx "microsoft yahei";
    font-weight: bold;
    text-align: center;
    color: #333;
    background: #F2F2F2;
}

.drawer_title1 {
    border-top: 0.5px solid #e6e6e6;
    padding: 20rpx;
    font: 27rpx "microsoft yahei";
    text-align: center;
    color: #999;
}

.drawer_content {
    height: 210px;
    overflow-y: scroll;
}

.btn_ok1 {
    padding: 25rpx;
    font: 30rpx "microsoft yahei";
    text-align: center;
    background: linear-gradient(to bottom right,#00CD66,#1aad19);
    color: #fff;
    border-radius: 0;
}

.btn_ok2 {
    padding: 25rpx;
    font: 30rpx "microsoft yahei";
    text-align: center;
    background: linear-gradient(to bottom right,#87CEFA,#34AAFF);
    color: #fff;
    border-radius: 0;
}

.btn_ok4 {
    padding: 25rpx;
    font: 40rpx "microsoft yahei";
    text-align: center;
    background: linear-gradient(to bottom right,#00CD66,#1aad19);
    color: #fff;
    border-radius: 0;
}

button[disabled][type="default"],button[disabled]:not([type]) {
    color: #fff;
    opacity: 0.8;
}

.weui-cell {
    padding: 10rpx 30rpx;
}

.weui-cell__hd {
    width: 100rpx;
}

.weui-cells {
    margin-top: 20rpx;
    font-size: 30rpx;
}

.weui-cells ::after {
    border-bottom: none;
}

.weui-cells::before {
    border-top: none;
}

.pai_reduce {
    padding: 5rpx 10rpx;
    background-color: #F07373;
    color: white;
    text-align: center;
    border-radius: 6rpx;
    margin-right: 10rpx;
}